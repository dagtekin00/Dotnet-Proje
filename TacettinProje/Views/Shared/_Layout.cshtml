<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mvc_proje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mvc_proje.styles.css" asp-append-version="true" />
</head>
<body style="font-family: Arial, Helvetica, sans-serif;">
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class="container-fluid ">
               <a class="navbar-brand" asp-area="" style=" color: #4f62ff; font: 18px/2 ;    margin-left: 10%; margin-top: 2%;"   asp-controller="Home" asp-action="Index"> <b> GIRISIM KAFASI </b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="background-color: #ffffffd3;"></span>
                </button>
                <img src="~/images/logo.png" style="width: 100px; height: 100px;" alt="">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between  " style=" margin-left: 40%;  margin-top: 3%;">
                    <ul class="navbar-nav flex-grow-">
                        <li class="nav-item">
                            <a class="nav-link mr-3" style="  color: #4f62ff; font: 16px/2 ; "    asp-area=""   asp-controller="Home" asp-action="Index" > <b>Home </b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mr-3"  style=" color: #4f62ff; font: 16px/2 ;  " asp-area="" asp-controller="Home" asp-action="yatirim"> <b>Yatırım </b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style=" color: #4f62ff; font: 16px/2 ;  " asp-area="" asp-controller="Home" asp-action="siparisSayfasi"> <b>Siparis Sayfasi</b></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " style=" color: #4f62ff; font: 16px/2 ;  " asp-area="" asp-controller="Home" asp-action="siparisVerenler"> <b>Siparis Verenler</b></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

    <footer class="border-top footer text-muted">
        <div class="tradingview-widget-container mt-4"> 
    <div class="tradingview-widget-container__widget"></div> 
         <script type="text/javascript" src="https://s3.tradingview.com/external-embedding/embed-widget-ticker-tape.js" async>
  {
  "symbols": [
    {
      "proName": "OANDA:SPX500USD",
      "title": "SP 500"
    },
    {
      "proName": "OANDA:NAS100USD",
      "title": "Nasdaq 100"
    },
    {
      "proName": "FX_IDC:EURUSD",
      "title": "EUR/USD"
    },
    {
      "proName": "BITSTAMP:BTCUSD",
      "title": "BTC/USD"
    },
    {
      "proName": "BITSTAMP:ETHUSD",
      "title": "ETH/USD"
    }
  ],
  "colorTheme": "light",
  "isTransparent": false,
  "displayMode": "adaptive",
  "locale": "tr"
}
  </script> </div> 
        <div class="container text-center mt-4">
            &copy;tacettindağtekin-girisimkafasi.all rights reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Gizlidir</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
